                android:text="PosesiÃ³n"/>

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp" />

            <TextView
                style="@style/tv_farmer"
                android:text="Nombre del predio"/>

            <EditText style="@style/et_farmer"/>

            <TextView
                style="@style/tv_farmer"
                android:text="Referencias"/>

            <EditText style="@style/et_farmer"/>


            <TextView
                style="@style/tv_farmer"
                android:text="Estado" />

            <Spinner
                android:id="@+id/municipality_spinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp" />

            <TextView
                style="@style/tv_farmer"
                android:text="Municipio"/>

            <Spinner
                android:id="@+id/state_spinner2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp" />

            <TextView
                style="@style/tv_farmer"
                android:text="Superficie"/>

            <EditText style="@style/et_farmer"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_btn_photo"
                android:text="@string/btn_send"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:padding="2sp"
                android:id="@+id/btn_add_farmer"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>+



