<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/pleca_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@drawable/pleca_green" />

    <ImageView
        android:id="@+id/pleca_blue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/pleca_green"
        android:background="@drawable/pleca_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_toEndOf="@+id/pleca_blue"
        android:layout_toRightOf="@+id/pleca_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                style="@style/et_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AGRICULTOR"
                android:textColor="@color/colorGreen" />

            <EditText
                android:id="@+id/txt_name"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:text="Nombre"
                android:textColor="@color/colorGray" />

            <EditText
                android:id="@+id/txt_second_name_a"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:text="Apellido Paterno"
                android:textColor="@color/colorGray" />

            <EditText
                android:id="@+id/txt_second_name_b"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:text="Apellido Materno"
                android:textColor="@color/colorGray" />

            <TextView
                style="@style/et_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTACTO"
                android:textColor="@color/colorGreen" />

            <EditText
                android:id="@+id/txt_email"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:text="Correo"
                android:textColor="@color/colorGray" />

            <EditText
                android:id="@+id/txt_phone"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:text="Telefono"
                android:textColor="@color/colorGray" />

            <TextView
                style="@style/et_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UBICACIÃ“N"
                android:textColor="@color/colorGreen" />

            <Button
                android:id="@+id/btn_state_location"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_2" />

            <Button
                android:id="@+id/btn_municipality_location"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_3" />

            <TextView
                style="@style/et_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPRA"
                android:textColor="@color/colorGreen" />


            <EditText
                android:id="@+id/txt_bill"
                style="@style/et_farmer"
                android:layout_marginTop="2sp"
                android:hint="@string/txt_sell_1" />


            <Button
                android:id="@+id/btn_state"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_2" />

            <Button
                android:id="@+id/btn_municipality"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_3" />

            <Button
                android:id="@+id/btn_variety"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_4"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_cantity"
                    style="@style/et_farmer"
                    android:hint="@string/txt_sell_5"
                    android:inputType="phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txt_cantity"
                    android:layout_alignRight="@+id/txt_cantity"
                    android:layout_centerVertical="true"
                    android:text="Sacos" />

            </RelativeLayout>

            <EditText
                android:id="@+id/txt_seed_lote"
                style="@style/et_farmer"
                android:hint="Lote de semilla"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_sell_type"
                style="@style/et_farmer"
                android:drawableRight="@drawable/ic_arrow"
                android:hint="@string/txt_sell_6" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/add_iv_farmer"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/register_photo" />

                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_toEndOf="@+id/add_iv_farmer"
                    android:layout_toRightOf="@+id/add_iv_farmer"
                    android:gravity="left|center_vertical"
                    android:text="@string/txt_photo" />

                <ImageView
                    android:id="@+id/add_iv_contract"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_below="@+id/add_iv_farmer"
                    android:layout_margin="10sp"
                    android:background="@drawable/register_photo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_below="@+id/txt_photo"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_toEndOf="@+id/add_iv_contract"
                    android:layout_toRightOf="@+id/add_iv_contract"
                    android:gravity="left|center_vertical"
                    android:text="@string/txt_contract" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_iv_contract"
                    android:layout_marginLeft="20sp"
                    android:layout_marginStart="20sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_alerts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/txt_alerts" />

                        <CheckBox
                            android:id="@+id/checkbox_alerts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_alerts"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/txt_terms" />

                        <CheckBox
                            android:id="@+id/checkbox_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_add_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_terms"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/button_login"
                        android:padding="2sp"
                        android:text="@string/btn_send"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />

                </RelativeLayout>

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
